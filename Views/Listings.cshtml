@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco.Web.PublishedModels.Listings>

@using ClientDependency.Core.Mvc

@{
    Layout = "Master.cshtml";

    // handles filtering & pagination queries
    Html.RequiresJs("/assets/js/listings.js");
    // handles fade-in after query
    Html.RequiresCss("/assets/css/listings.css");
}


@* intro start *@
<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">Our Amazing Properties</h1>
                </div>
            </div>
            <div class="col-md-12 col-lg-4">
                <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Listings
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
@* intro end *@

@* search start *@
<section>

    @* search tab selector start *@
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="nav nav-pills-a nav-pills mb-3 section-t3 search-nav" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-simple-tab" data-toggle="pill" href="#pills-simple" role="tab"
                           aria-controls="pills-simple" aria-selected="true" onclick="clearTerms()">Simple Search</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-advanced-tab" data-toggle="pill" href="#pills-advanced" role="tab" aria-controls="pills-advanced"
                           aria-selected="false" onclick="clearTerms()">Filters</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    @* search tab selector end *@

    <div class="tab-content" id="pills-tabContent">
        @* simple search start *@
        <div class="tab-pane fade show active" id="pills-simple" role="tabpanel" aria-labelledby="pills-simple-tab">

            <div class="container">
                <div class="row">
                    <div class="col-lg-4 d-flex mb-3">
                        <input type="text" name="searchterm" class="form-control form-control-sm" id="searchTerm" onkeyup="processSearchChange()">

                        <button type="button" class="btn btn-b-n" onclick="clearTerms()">
                            <span class="fa fa-times"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        @* simple search end *@

        @* advanced search start *@
        <div class="tab-pane fade" id="pills-advanced" role="tabpanel" aria-labelledby="pills-advanced-tab">
            @Html.Partial("~/Views/Partials/ListingFilters.cshtml")
        </div>
        @* advanced search end *@

    </div>
</section>
@* search end *@

@* results will get inserted below *@
<section class="property-grid grid">
    <div class="container" id="results-container">
        @* default *@
        @Html.Partial("~/Views/Partials/ListingResults.cshtml")
    </div>
</section>

